#include <stdio.h>
#include <string.h>
#include "libft.h"

void	*ft_memchr(const void *s, int c, size_t n)
{
       /*The memchr() function scans the initial n bytes of the memory
       area pointed to by s for the first instance of c.  Both c and the
       bytes of the memory area pointed to by s are interpreted as
       unsigned char.*/
	
	size_t	i;
	unsigned char *s2;

	i = 0;
	s2 = (unsigned char *)s;
	while (i < n)
	{
		if 
		s2[i] = c;
		i++;
	}
	return (s2);
}

int		main()
{
	char	str1[]= "exemple";
	char	str2[]= "exemple";

	memchr(str1, '&', 2);
	printf("%s\n", str1);
	ft_memchr(str2, '&', 2);
	printf("%s\n", str2);

	return(0);
}
